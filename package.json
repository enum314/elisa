{
	"name": "elisa",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev:1-server": "tsx watch src/server/development.ts --tsconfig tsconfig.server.json",
		"dev:2-next": "next dev",
		"dev": "run-p dev:*",
		"test": "tsc --noEmit",
		"build:1-generate": "prisma generate",
		"build:2-migrate": "prisma migrate deploy",
		"build:3-next": "cross-env NODE_ENV=production next build",
		"build:4-server": "tsc --project tsconfig.server.json",
		"build": "run-s build:*",
		"start": "cross-env NODE_ENV=production node dist/server/production.js",
		"format": "prettier --write \"src/**/*.{ts,tsx}\"",
		"lint": "eslint src",
		"migrate": "prisma migrate deploy",
		"migrate:dev": "prisma migrate dev",
		"v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
		"v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
		"version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
	},
	"dependencies": {
		"@babel/core": "^7.20.5",
		"@emotion/react": "^11.10.5",
		"@emotion/server": "^11.10.0",
		"@mantine/carousel": "^5.9.5",
		"@mantine/core": "^5.9.5",
		"@mantine/dates": "^5.9.5",
		"@mantine/form": "^5.9.5",
		"@mantine/hooks": "^5.9.5",
		"@mantine/modals": "^5.9.5",
		"@mantine/next": "^5.9.5",
		"@mantine/notifications": "^5.9.5",
		"@mantine/tiptap": "^5.9.5",
		"@next-auth/prisma-adapter": "^1.0.5",
		"@next/font": "13.1.0",
		"@prisma/client": "^4.8.0",
		"@tabler/icons": "^1.117.0",
		"@tanstack/react-query": "^4.20.4",
		"@tiptap/core": "2.0.0-beta.209",
		"@tiptap/extension-link": "2.0.0-beta.209",
		"@tiptap/react": "2.0.0-beta.209",
		"@tiptap/starter-kit": "2.0.0-beta.209",
		"@trpc/client": "^10.6.0",
		"@trpc/next": "^10.6.0",
		"@trpc/react-query": "^10.6.0",
		"@trpc/server": "^10.6.0",
		"@types/node": "18.11.17",
		"@types/react": "18.0.28",
		"@types/react-dom": "18.0.9",
		"bad-words": "^3.0.4",
		"dayjs": "^1.11.7",
		"dotenv": "^16.0.3",
		"embla-carousel-react": "^7.0.5",
		"ioredis": "^5.2.4",
		"next": "13.1.0",
		"next-auth": "^4.18.6",
		"next-seo": "^5.15.0",
		"node-fetch": "^3.3.0",
		"prisma": "^4.7.1",
		"prosemirror-commands": "^1.5.0",
		"prosemirror-dropcursor": "^1.6.1",
		"prosemirror-gapcursor": "^1.3.1",
		"prosemirror-history": "^1.3.0",
		"prosemirror-keymap": "^1.2.0",
		"prosemirror-model": "^1.18.3",
		"prosemirror-schema-list": "^1.2.2",
		"prosemirror-state": "^1.4.2",
		"prosemirror-transform": "^1.7.0",
		"prosemirror-view": "^1.29.1",
		"rate-limiter-flexible": "^2.4.1",
		"superjson": "^1.12.1",
		"ws": "^8.11.0",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@types/bad-words": "^3.0.1",
		"@types/node-fetch": "^2.6.2",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"autoprefixer": "^10.4.13",
		"conventional-changelog-cli": "^2.2.2",
		"cross-env": "^7.0.3",
		"eslint": "8.30.0",
		"eslint-config-next": "13.1.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-import-sort": "^0.0.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"husky": "^8.0.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.20",
		"prettier": "^2.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.2.4",
		"tsx": "^3.12.1",
		"typescript": "4.9.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			],
			"scope-case": [
				1,
				"always",
				"pascal-case"
			]
		}
	}
}